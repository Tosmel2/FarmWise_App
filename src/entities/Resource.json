{
  "name": "Resource",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Resource title"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the resource"
    },
    "content": {
      "type": "string",
      "description": "Main content/body of the resource"
    },
    "category": {
      "type": "string",
      "enum": [
        "climate_adaptation",
        "crop_management",
        "soil_health",
        "water_management",
        "pest_control",
        "market_knowledge",
        "technology",
        "sustainability"
      ],
      "description": "Resource category"
    },
    "resource_type": {
      "type": "string",
      "enum": [
        "article",
        "guide",
        "video",
        "infographic",
        "checklist",
        "case_study"
      ],
      "description": "Type of resource"
    },
    "difficulty_level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "description": "Difficulty level for farmers"
    },
    "estimated_read_time": {
      "type": "number",
      "description": "Estimated read time in minutes"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for better searchability"
    },
    "author": {
      "type": "string",
      "description": "Author or source of the resource"
    },
    "image_url": {
      "type": "string",
      "description": "Featured image URL"
    },
    "external_url": {
      "type": "string",
      "description": "External link if applicable"
    },
    "likes_count": {
      "type": "number",
      "default": 0,
      "description": "Number of likes"
    },
    "views_count": {
      "type": "number",
      "default": 0,
      "description": "Number of views"
    },
    "is_featured": {
      "type": "boolean",
      "default": false,
      "description": "Whether resource is featured"
    }
  },
  "required": [
    "title",
    "description",
    "content",
    "category",
    "resource_type"
  ]
}